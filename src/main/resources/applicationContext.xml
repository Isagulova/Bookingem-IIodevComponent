<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context https://www.springframework.org/schema/context/spring-context.xsd">
        <!-- Spring аннотацияларындагы биндерди автоматтык түрдө каттоо үчүн "kg.Isagulova.bookingem" пакетин жана анын субпакеттерин сканерлейт. -->
        <context:component-scan base-package="kg.Isagulova.bookingem"/>
        <!-- Spring ге ${key} аркылуу маанини алмаштыруу үчүн класс жолундагы "book.properties" файлын колдонууну көрсөтөт. -->
        <context:property-placeholder location="classpath:book.properties"/>
</beans>